<h1>Update pet</h1>

<form action="/pets/update/{{pet.id}}" method="post">
  <div class="form-group">
    <label for="name">Name*</label>
    <input value="{{pet.name}}" class="form-control" type="text" id="name" name="name" placeholder="Sisi" required>
  </div>

  <div class="form-group">
    <label for="breed">Breed*</label>
    <input value="{{pet.breed}}" class="form-control" type="text" id="breed" name="breed" placeholder="cat" required>
  </div>
  
  <div class="form-group">
    <label for="birhtDate">Birhtdate</label>
    <input value="{{pet.birhtDate}}" class="form-control" type="date" id="birthDate" name="birthDate">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input value="{{pet.description}}" class="form-control" type="text" id="description" name="description" placeholder="Young red cat that likes to cudle">
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input value="{{pet.image}}" class="form-control" type="text" id="image" name="image" placeholder="Ex: http://lien.vers-l-image.com">
  </div>
  
  <div class="form-group">
    <label for="ownerId">Owner ID</label>
    <input value="{{pet.ownerId}}" class="form-control" type="text" id="ownerId" name="ownerId" placeholder="4568432156">
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Update
    </button>
  </div>
</form>
